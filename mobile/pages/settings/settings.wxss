/* pages/settings/settings.wxss */
page{
  background-color: #eeeeee;
}
.header{
  background-color: #1296db;
  display: flex;
  align-items: center;
}
.header image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin: 20rpx;
}
/*菜单*/
.item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* margin: 10rpx; */
  border-bottom: solid 2rpx #eeeeee;
  background-color: white;
}
.item view{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx;
}
.menu .item image{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}