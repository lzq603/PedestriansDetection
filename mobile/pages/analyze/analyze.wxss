/* pages/analyze/analyze.wxss */

.container{
  padding-top: 40rpx;
  width: 700rpx;
  height: 550rpx;
  margin-left: auto;
  margin-right: auto;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 日期范围面板每一行 */
.daterange view{
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
}
/* 单个选项 */
.ropt{
  font-size: 28rpx;
  color: #8a8a8a;
  border: solid 1rpx #8a8a8a;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.selected{
  color: #1269bd;
  border-color: #1269bd;
}
/* 自定义日期范围 */
.date{
  font-size: 34rpx;
}
/* 详情数据标题 */
.detail .title{
  padding-left: 20rpx;
  padding-top: 40rpx;
}
/* 详情数据表格 */
.table{
  margin: 20rpx;
}
.table .tr, .table .th{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.tr .td, .th .td{
  width: 50%;
  text-align: center;
  border: solid 1rpx #eeeeee;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 32rpx;
}
